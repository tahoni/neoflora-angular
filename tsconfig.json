{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "tahoni": [
        "dist/tahoni/tahoni",
        "dist/tahoni"
      ],
      "tahoni-lib": [
        "dist/tahoni-lib/tahoni-lib",
        "dist/tahoni-lib"
      ],
      "neoflora-lib": [
        "dist/neoflora-lib/neoflora-lib",
        "dist/neoflora-lib"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}